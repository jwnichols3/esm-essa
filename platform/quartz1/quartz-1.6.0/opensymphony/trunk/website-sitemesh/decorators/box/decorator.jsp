<%@ taglib uri="http://www.opensymphony.com/sitemesh/decorator" prefix="decorator" %>
<%-- Properties: title, meta.icon, meta.link --%>

<style type="text/css" media="all">@import "<%= request.getContextPath() %>/decorators/box/style.css";</style>
<div class="box">
	<div class="top"></div>
	<div class="body">
		<div class="icon"><a href="<decorator:getProperty property='meta.link' />"><img src="<decorator:getProperty property='meta.icon' />" alt="" /></a></div>
		<div class="label"><decorator:title/></div>
		<div class="text"><decorator:body /></div>
	</div>
	<div class="bottom"></div>
</div>

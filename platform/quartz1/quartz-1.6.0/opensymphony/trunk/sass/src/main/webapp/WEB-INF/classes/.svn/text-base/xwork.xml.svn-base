<!DOCTYPE xwork PUBLIC "-//OpenSymphony Group//XWork 1.1//EN" "http://www.opensymphony.com/xwork/xwork-1.1.dtd">

<xwork>
    <include file="webwork-default.xml"/>

    <package name="default" extends="webwork-default">
        <result-types>
            <result-type name="freemarker" default="true"
                         class="com.opensymphony.webwork.views.freemarker.FreemarkerResult"/>
        </result-types>
    </package>

    <package name="public" extends="default">
        <action name="index">
            <result>index.ftl</result>
        </action>

        <action name="create" class="com.opensymphony.sass.actions.Create">
            <result>create-success.ftl</result>
            <result name="input">create-input.ftl</result>
        </action>

        <action name="logout" class="com.opensymphony.sass.actions.Logout">
            <result type="redirect-action">index</result>
        </action>

        <action name="login" class="com.opensymphony.sass.actions.Login">
            <result type="redirect-action">
                <param name="namespace">/secure</param>
                <param name="actionName">dashboard</param>
            </result>
            <result name="input">index.ftl</result>
        </action>

        <action name="resetPassword" class="com.opensymphony.sass.actions.ResetPassword">
            <result name="input">reset-password-input.ftl</result>
            <result>reset-password-success.ftl</result>
        </action>
    </package>

    <package name="secure" extends="default" namespace="/secure">
        <action name="dashboard">
            <result>dashboard.ftl</result>
        </action>

        <action name="changePassword" class="com.opensymphony.sass.actions.secure.ChangePassword">
            <result>dashboard.ftl</result>
            <result name="input">dashboard.ftl</result>
        </action>
    </package>
</xwork>

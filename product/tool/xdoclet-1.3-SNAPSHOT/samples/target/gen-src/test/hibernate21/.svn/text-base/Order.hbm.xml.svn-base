<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping

>

    <class
            name="test.hibernate21.Order"
            table="ORDERS"
            polymorphism="explicit"
            mutable="false"
    >

        <meta
            attribute="class-description"
        >
            <![CDATA[Class Description Text]]>
        </meta>

        <meta
            attribute="class-code"
        >
            <![CDATA[extra class code]]>
        </meta>

    <id
        name="id"
            column="id"
            unsaved-value="null"
    >
            <meta
                attribute="scope-get"
            >
                <![CDATA[protected]]>
            </meta>

            <meta
                attribute="scope-set"
            >
                <![CDATA[protected]]>
            </meta>

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="sequence">

        <!-- The generator-param tag is deprecated, use the @hibernate.generator and @hibernate.param tags instead -->
        <param
                name="table"
        >
            <![CDATA[HIVAL]]>
        </param>

        <!-- The generator-param tag is deprecated, use the @hibernate.generator and @hibernate.param tags instead -->
        <param
                name="column"
        >
            <![CDATA[NEXT]]>
        </param>

    </generator>

    </id>

        <version
            name="version"
            column="version"
            type="int"
        />

        <list
            name="items"
            lazy="true"
            inverse="true"
            cascade="all"
        >

            <!-- @hibernate.collection-key tag is deprecated, use @hibernate.key instead -->
            <key
                column="ORDER_ID"
            >

            </key>

            <!-- @hibernate.collection-index tag is deprecated, use @hibernate.index instead -->
            <index
                column="ORDER_POS"
            />

            <!-- @hibernate.collection-one-to-many tag is deprecated, use @hibernate.one-to-many instead -->
            <one-to-many
                  class="test.hibernate21.LineItem"
            />

        </list>

        <property
            name="date"
                    type="calendar_date"
                    column="date"
        >

        </property>

        <many-to-one
            name="customer"
                    column="CUSTOMER_ID"
                not-null="true"
        >

        </many-to-one>

        <property
            name="updateComment"
                    column="LAST_UPDATED_BY"
        >

        </property>

        <property
            name="created"
                    type="timestamp"
                    column="created"
                update="false"
                insert="true"
        >
            <meta
                attribute="use-in-equals"
            >
                <![CDATA[true]]>
            </meta>

            <meta
                attribute="use-in-tostring"
            >
                <![CDATA[true]]>
            </meta>

        </property>

    </class>    

</hibernate-mapping>


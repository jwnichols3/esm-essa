<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping

>

    <class
            name="test.hibernate20.LineItem"
            table="ITEMS"
            schema="SHOP"
            proxy="LineItem"
            mutable="false"
    >

    <id
        name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null"
    >

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="sequence">

        <!-- The generator-param tag is deprecated, use the @hibernate.generator and @hibernate.param tags instead -->
        <param
                name="table"
        >
            <![CDATA[HIVAL]]>
        </param>

        <!-- The generator-param tag is deprecated, use the @hibernate.generator and @hibernate.param tags instead -->
        <param
                name="column"
        >
            <![CDATA[NEXT]]>
        </param>

    </generator>

    </id>

        <version
            name="version"
            column="version"
            type="int"
        />

        <many-to-one
            name="order"
                class="test.hibernate20.Order"
                    column="order_column"
                not-null="true"
        >

        </many-to-one>

        <property
            name="quantity"
                type="int"
                    column="AMOUNT"
                not-null="true"
                unique="false"
        >

        </property>

        <many-to-one
            name="product"
                class="test.hibernate20.Product"
                    column="PRODUCT_ID"
                not-null="true"
                outer-join="true"
        >

        </many-to-one>

        <property
            name="created"
                type="timestamp"
                    column="created"
                update="false"
                insert="true"
        >

        </property>

    </class>    

</hibernate-mapping>


#log4j.rootLogger=DEBUG, A1
log4j.rootLogger=INFO, A1
#
log4j.appender.A1=org.apache.log4j.ConsoleAppender
#log4j.appender.A1=org.apache.log4j.net.SyslogAppender
#log4j.appender.A1.SyslogHost=localhost
#log4j.appender.A1.Facility=local3
#
log4j.appender.A1.layout=org.apache.log4j.PatternLayout
#
#log4j.appender.A1.layout.ConversionPattern=%-4r %-5p [%t] %37c %3x - %m%n
#log4j.appender.A1.layout.ConversionPattern=%5p [%t] %c{2} - %m%n
log4j.appender.A1.layout.ConversionPattern=%5p %d [%t] %c - %m%n
#
# only digiburo
log4j.logger.com.digiburo=TRACE
#log4j.logger.com.digiburo.fl2.struts1_2.user=DEBUG
